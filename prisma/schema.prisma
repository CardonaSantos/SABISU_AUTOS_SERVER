  eliminado         Boolean            @default(false)  // Indica si la notificaci√≥n fue eliminada
  leidoEn           DateTime?                          // Fecha en que se ley√≥
  recibidoEn        DateTime           @default(now())  // Fecha en que se recibi√≥ la notificaci√≥n
}


model SolicitudPrecio {
