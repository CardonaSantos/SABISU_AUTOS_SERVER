model Cuota {
  id                  Int          @id @default(autoincrement())
  ventaCuotaId        Int          // Relaci√≥n con la venta a cuotas
  ventaCuota          VentaCuota   @relation(fields: [ventaCuotaId], references: [id], onDelete: Cascade)
