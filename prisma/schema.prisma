model SucursalSaldoDiario {
    id           Int      @id @default(autoincrement())
    sucursalId   Int
    fecha        DateTime @default(now())
    saldoInicio  Float
    saldoFinal   Float
    totalIngresos Float
    totalEgresos  Float
    sucursal     Sucursal @relation(fields:[sucursalId], references:[id], onDelete: Cascade)
    globalDiarioId Int?
    globalDiario   SaldoGlobalDiario? @relation("GlobalSaldos", fields: [globalDiarioId], references: [id], onDelete: SetNull)
    @@unique([sucursalId, fecha])

    creadoEn        DateTime @default(now())
    actualizadoEn   DateTime @updatedAt
    //nueva prop de prueba, solo fecha y media noche forzado 
    fechaGenerado        DateTime  @default(dbgenerated("(CURRENT_DATE)"))  // sólo la fecha, sin hora
  }


model SaldoGlobalDiario {
    id             Int       @id @default(autoincrement())
    fecha          DateTime  @default(now()) @unique
    saldoTotal     Float     // Suma de todos los saldoFinal
    ingresosTotal  Float     // Suma de todos los totalIngresos
    egresosTotal   Float     // Suma de todos los totalEgresos
    saldosDiarios SucursalSaldoDiario[] @relation("GlobalSaldos")
    usuarioId Int?
    usuario Usuario? @relation(fields: [usuarioId], references: [id], onDelete: SetNull)
    creadoEn        DateTime @default(now())
    actualizadoEn   DateTime @updatedAt
  }                                       

  model RegistroCaja {
    id               Int      @id @default(autoincrement())
    sucursalId       Int
    sucursal         Sucursal @relation(fields: [sucursalId], references: [id])
    usuarioInicioId  Int
    usuarioInicio    Usuario  @relation("UsuarioInicio", fields: [usuarioInicioId], references: [id])
    usuarioCierreId  Int?
    usuarioCierre    Usuario? @relation("UsuarioCierre", fields: [usuarioCierreId], references: [id])
    fechaApertura    DateTime @default(now())
    fechaCierre      DateTime?
    saldoInicial     Float
    saldoFinal       Float?
    estado           EstadoTurnoCaja @default(ABIERTO) 
    comentario       String?
    comentarioFinal  String?
    movimientoCaja   String?
    movimientos      MovimientoCaja[]
    venta Venta[]
    creadoEn        DateTime @default(now())
    actualizadoEn   DateTime @updatedAt
    depositado       Boolean   @default(false)    // ¡nuevo!
  }

  model MovimientoCaja {
    id              Int       @id @default(autoincrement())
    registroCajaId  Int?
    registroCaja    RegistroCaja? @relation(fields:[registroCajaId], references:[id])//lo dejo opcional porque puede ser un egreso sin turno de caja
    fecha           DateTime  @default(now())
    tipo            TipoMovimientoCaja
    categoria       CategoriaMovimiento
    monto           Float
    descripcion     String?
    referencia      String?
    // Campos extra para depósitos:
    banco           String?           // si tipo = DEPOSITO_BANCO
    numeroBoleta    String?
    usadoParaCierre Boolean?          // toggle “cierre de caja”
    // Campos extra para egresos/costos de venta:
    proveedorId     Int?              // si categoria = COSTO_VENTA o DEPOSITO_PROVEEDOR
    proveedor       Proveedor?        @relation(fields:[proveedorId], references:[id])
    // Quién registró este movimiento
    usuarioId       Int
    usuario         Usuario           @relation(fields:[usuarioId], references:[id])
    creadoEn        DateTime @default(now())
    actualizadoEn   DateTime @updatedAt
  }

  
enum EstadoTurnoCaja {
  ABIERTO
  CERRADO
  ARQUEO       // Corte o arqueo parcial
  AJUSTADO     // Se hizo ajuste por diferencia
  ANULADO      // (opcional, si anulas turnos)
}

enum TipoMovimientoCaja {
  INGRESO
  EGRESO
  VENTA
  ABONO
  RETIRO
  DEPOSITO_BANCO
  CHEQUE
  TRANSFERENCIA
  AJUSTE
  DEVOLUCION
  OTRO
}


enum CategoriaMovimiento {
    COSTO_VENTA
    DEPOSITO_CIERRE
    DEPOSITO_PROVEEDOR
    GASTO_OPERATIVO
  }

